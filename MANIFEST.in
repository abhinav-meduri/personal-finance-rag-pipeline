# Include documentation
include README.md
include LICENSE
include VERSION
include CHANGELOG.md
include requirements.txt

# Include all documentation files
recursive-include docs *.md

# Include sample data
recursive-include data/sample *.json

# Include distribution package
recursive-include distribution *.json *.md *.py

# Include examples
recursive-include examples *.txt *.md

# Exclude large files and generated data
exclude *.gguf
exclude *.bin
exclude *.sqlite3
exclude *.db
exclude *.pickle

# Exclude generated directories
prune vector_db
prune structured_vector_db
prune qa_vector_db
prune processed_data
prune processed_docs
prune wiki_pages
prune wiki_data
prune qa_backups
prune comparison_results

# Exclude test output
prune test_output

# Exclude Python cache
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so

# Exclude OS files
global-exclude .DS_Store
global-exclude Thumbs.db
global-exclude *.swp
global-exclude *.swo

# Exclude IDE files
prune .vscode
prune .idea

# Exclude logs
global-exclude *.log
prune logs

